<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.ollie.androidrestaurant.MainActivity">


    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:id="@+id/restaurant_list_container">
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/restaurant_grid_container">
    </RelativeLayout>

    <fragment android:name="com.ollie.androidrestaurant.RestaurantListFragment"
        android:id="@+id/restaurant_list_fragment"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
    </fragment>

</LinearLayout>

